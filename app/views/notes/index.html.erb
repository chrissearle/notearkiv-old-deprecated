<h2>Noter</h2>

<br />

<table>

  <tr>
    <th>ID</th>
    <th>Tittel</th>
    <th>Original</th>
    <th>Kopi</th>
    <th>Instrumental</th>
    <th>Besetning</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

  <% for note in @notes %>
  <tr>
    <td><%=h note.display_id %></td>
    <td><%= note.title %></td>
    <td><%= note.count_originals %></td>
    <td><%= note.count_copies %></td>
    <td><%= note.count_instrumental %></td>
    <td><%= note.voice %></td>
    <td><%= link_to 'endre', edit_note_path(note) %></td>
    <td><%= link_to 'slett', note, :confirm => 'Er du sikker?',
            :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ny note', new_note_path %>