<h2>Note: <%= @note.title %></h2>

<br/>

<table>

  <tr>
    <td>ID</td>
    <td><%= @note.item %></td>
  </tr>

  <tr>
    <td>Tittel</td>
    <td><%= @note.title %></td>
  </tr>

  <tr>
    <td>Komponist</td>
    <td>
      <%= @note.composer.name if @note.composer %>
    </td>
  </tr>

  <tr>
    <td>Genre</td>
    <td>
      <%= @note.genre.name if @note.genre %>
    </td>
  </tr>

  <tr>
    <td>Epoke</td>
    <td>
      <%= @note.period.name if @note.period %>
    </td>
  </tr>

  <tr>
    <td>Spr√•k</td>
    <td>
      <% if @note.languages.size() > 0 %>
          <ul>
            <% @note.languages.each do |lang| %>
                <li><%= lang.name %></li>
            <% end %>
          </ul>
      <% end %>
    </td>
  </tr>

  <tr>
    <td>Akkomp.</td>
    <td>
      <%= @note.instrument %>
    </td>
  </tr>

  <tr>
    <td>Besetning</td>
    <td><%= @note.voice %></td>
  </tr>

  <tr>
    <td>Solister</td>
    <td><%= @note.soloists %></td>
  </tr>

  <tr>
    <td>Antall original</td>
    <td><%= @note.count_originals %></td>
  </tr>

  <tr>
    <td>Antall kopi</td>
    <td><%= @note.count_copies %></td>
  </tr>

  <tr>
    <td>Antall instrumental</td>
    <td><%= @note.count_instrumental %></td>
  </tr>

  <tr>
    <td>Fil</td>
    <td><%= list_link_dropbox_files(@note) %></td>
  </tr>

</table>

<br/>

<% if permitted_to? :edit, @note %>
    <%= link_to 'Endre', edit_note_path %>
    |
<% end %>
<% if permitted_to? :destroy, @note %>
    <%= link_to 'Slett', @note, :confirm => 'Sikker?', :method => :delete %>
    |
<% end %>
<%= link_to 'Tilbake til noter', notes_path %>