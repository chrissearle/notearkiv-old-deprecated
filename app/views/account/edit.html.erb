<% semantic_form_for @user, :url => { :controller => "account", :action => 'update' } do |form| %>
    <% form.inputs do %>
        <%= form.input :password, :label => "Passord", :required => false %>
        <%= form.input :password_confirmation, :label => "Bekreft passord", :required => false  %>
        <%= form.input :email, :label => "E-post" %>
    <% end %>
    <% form.buttons do %>
        <%= form.commit_button :label => "Lagre" %>
    <% end %>
<% end %>
