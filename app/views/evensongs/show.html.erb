<h2>Evensong: <%= @evensong.title %></h2>

<br/>

<table>

  <tr>
    <td>Tittel</td>
    <td><%= @evensong.title %></td>
  </tr>

  <tr>
    <td>Salme</td>
    <td><%= @evensong.psalm %></td>
  </tr>

  <tr>
    <td>Komponist</td>
    <td>
      <%= @evensong.composer.name if @evensong.composer %>
    </td>
  </tr>

  <tr>
    <td>Genre</td>
    <td>
      <%= @evensong.genre.name if @evensong.genre %>
    </td>
  </tr>

  <tr>
    <td>Fil</td>
    <td><%= link_to_evensong_file(@evensong, true) %></td>
  </tr>
</table>


<br/>

<% if permitted_to? :edit, @evensong %>
    <%= link_to 'Endre', edit_evensong_path %>
<% end %>
<br/>
<% if permitted_to? :destroy, @evensong %>
    <%= link_to 'Slett', @evensong, :confirm => 'Sikker?', :method => :delete %>
<% end %>
<br/>
<%= link_to 'Tilbake', evensongs_path %>