<% content_for :head do %>
    <script type="text/javascript" src="/js/jquery-1.4.1.min.js"></script>
    <script type="text/javascript" src="/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function()
        {
            $('#noteTable').dataTable({
                "bPaginate": false,
                "bInfo": false,
                "oLanguage": {
                    "sSearch": "S&oslash;k:",
                    "sZeroRecords": "Ingen treff"
                },
                "aoColumns": [
                    {
                        "sType": "html"
                    },
                    null,
                    null,
                    null,
                    {
                        "bSearchable": false
                    }
                ]
            });
        }
                );
    </script>
<% end %>

<h2>Evensongnoter</h2>

<p>
  <% if permitted_to? :new, :evensongs %>
      <%= link_to 'Ny evensongnote', new_evensong_path %>
      |
  <% end %>
  <% if permitted_to? :upload, :evensongs_upload %>
      <%= link_to 'Last opp', evensongsupload_path %>
      |
  <% end %>
  <%= link_to 'Last ned (xls)', evensongs_path(:format => :xls) %>
  |
  <%= link_to 'Last ned (pdf)', evensongs_path(:format => :pdf) %>
</p>

<table id="noteTable">
  <thead>
  <tr>
    <th>Tittel</th>
    <th>Salme</th>
    <th>Komponist</th>
    <th>Genre</th>
    <th>Fil</th>
  </tr>
  </thead>
  <tbody>
  <% for evensong in @evensongs %>
      <tr>
        <td>
          <% link_to(evensong) do %>
              <%= evensong.title %>
          <% end %>
        </td>
        <td><%= evensong.psalm %></td>
        <td><%= evensong.composer.name if evensong.composer %></td>
        <td><%= evensong.genre.name if evensong.genre %></td>
        <td>
          <% if (!evensong.has_attachment?) && permitted_to?(:edit, evensong) %>
              <%= link_to 'Last&nbsp;opp', edit_evensong_path(evensong) %>
          <% else %>
              <%= list_link_dropbox_files(evensong) %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<p>
  <% if permitted_to? :new, :evensongs %>
      <%= link_to 'Ny evensongnote', new_evensong_path %>
      |
  <% end %>
  <% if permitted_to? :upload, :evensongs_upload %>
      <%= link_to 'Last opp', evensongsupload_path %>
      |
  <% end %>
  <%= link_to 'Last ned (xls)', evensongs_path(:format => :xls) %>
  |
  <%= link_to 'Last ned (pdf)', evensongs_path(:format => :pdf) %>
</p>
