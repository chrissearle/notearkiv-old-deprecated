<% semantic_form_for @user do |form| %>
    <% form.inputs do %>
        <%= form.input :name, :label => "Navn" %>
        <%= form.input :email, :label => "E-post" %>
        <%= form.input :roles, :label => "Roles", :as => :check_boxes %>
    <% end %>
    <% form.buttons do %>
        <%= form.commit_button :label => "Lagre" %>
    <% end %>
<% end %>
