  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
  <%= yield :head %>

</head>
<body>
<div id="header">
  <h1>Arkiv for noter &amp; evensongnoter</h1>

  <div id="menu">
    <ul id="nav">
      <% if current_user %>
          <li><%= link_to 'Noter', notes_path %></li>
