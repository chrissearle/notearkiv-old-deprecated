<!DOCTYPE html>
<html>
<head>
  <title>Arkiv for noter &amp; evensongnoter</title>
  <%= render :partial => '/layouts/webfonts' %>
  <%= stylesheet_link_tag 'style', 'jquery.autocomplete', 'formtastic', 'formtastic_changes', 'tabs', 'application' %>
  <%= javascript_include_tag 'jquery', 'jquery.dataTables.min', 'rails' %>
  <%= javascript_include_tag 'jquery.autocomplete.min', 'jquery.bgiframe.min', 'jquery.ajaxQueue', 'tabs.min' %>
  <%= javascript_include_tag 'application' %>
  <% if menu_side == "top" %>
       <%= javascript_include_tag 'toggle_menu' %>
  <% end %>

  <%= csrf_meta_tag %>
  <%= yield :head %>

</head>
<body>
<div id="header">
  <h1>Arkiv for noter &amp; evensongnoter</h1>

  <div id="menu">
    <ul id="nav">
      <% if current_user %>
          <li><%= link_to 'Noter', notes_path %></li>
          <li><%= link_to 'Evensongnoter', evensongs_path %></li>
          <li><%= link_to 'SÃ¸k', search_path %></li>
      <% end %>
      <li><a href="http://www.ochs.no">OCHS</a></li>
    </ul>
  </div>
</div>
<div id="content">
  <div id="menu-control" style="display: none">
    <div class="menu-links">
      <%= yield :links %>
    </div>

    <a href="#" id="show-menu" style="display: none" class="menu-link" data-action="right">Meny</a>
  </div>
  <div id="right">
    <p style="color: green"><%= flash[:notice] %></p>

    <p style="color: red"><%= flash[:error] %></p>

    <%= yield %>
  </div>

  <div id="left">
    <div class="box">
      <a href="#" id="hide-menu" style="display: none" class="menu-link" data-action="top">Meny</a>
    </div>

    <% if current_user %>
        <%= yield :links %>

        <%= render :partial => '/layouts/user_links' %>

        <%= render :partial => '/layouts/dropbox' %>

        <%= render :partial => '/layouts/metadata' %>

    <% end %>

    <%= render :partial => '/layouts/credit' %>
  </div>
</div>
<%= render :partial => '/layouts/woopra' %>
<%= render :partial => '/layouts/google_analytics' %>
</body>
</html>
